import "../styles/global.css";
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "我的博客";
---

<BaseLayout pageTitle={pageTitle}>
    <p>在这里，我将分享我的 Astro 学习之旅。</p>
    <!-- /**
         * 博客文章列表
         * 
         * 使用无序列表 <ul> 展示博客文章链接
         * 每个 <li> 包含一个 <a> 超链接标签
         * 
         * <a> 标签的作用：
         * - href 属性：指定链接的目标 URL 地址 ("/posts/post-1/")
         * - 创建可点击的超链接，用户点击"文章 1"文本会导航到指定路径
         * - 允许用户在网站中浏览不同页面
         */ -->
    <ul>
        <li><a href="/posts/post-1/">文章 1</a></li>
        <li><a href="/posts/post-2/">文章 2</a></li>
        <li><a href="/posts/post-3/">文章 3</a></li>
    </ul>
</BaseLayout>
